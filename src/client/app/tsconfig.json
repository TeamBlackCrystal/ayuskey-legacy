{
  "compilerOptions": {
		"jsx": "preserve",
    "allowJs": true,
    "noEmitOnError": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": false,
    "sourceMap": false,
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": false,
    "noLib": false,
    "strict": true,
    "strictNullChecks": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		//"noImplicitThis":true,
    "typeRoots": [
      "../../../node_modules/@types",
      "src/@types"
    ]
  },
  "compileOnSave": false,
  "include": [
    "./**/*.ts",
		"./**/*.vue"
  ],
	"vueCompilerOptions": {
    // "target": 2.7
  }
}
