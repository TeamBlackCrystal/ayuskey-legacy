{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:base"
	],
	"ignorePresets": [":prHourlyLimit2"],
	"baseBranches": ["develop"],
	"timezone": "Asia/Tokyo",
	"dependencyDashboard": false,
	"automerge": false,
	"prHourlyLimit": 100,
	"prConcurrentLimit": 100,
	"branchConcurrentLimit": 100,
	"labels": ["ðŸ“¦Dependencies"],
	"packageRules": [
		{
			"matchManagers": ["npm"],
			"addLabels": ["topic/JavaScriptðŸ§¶"]
		},
		{
			"matchManagers": ["docker-compose", "dockerfile"],
			"addLabels": ["topic/Dockerâš“"]
		}
	],
	"regexManagers": [
		{
			"description": "Update docker references in gitlab variables",
			"fileMatch": ["\\.gitlab-ci\\.yml$"],
			"matchStrings": [
				"CI_RENOVATE_IMAGE[A-Z_]*\\s*:\\s*(?<depName>[^:]+?):(?<currentValue>[a-z0-9.-]+)(?:@(?<currentDigest>sha256:[a-f0-9]+))?"
			],
			"datasourceTemplate": "docker",
			"versioningTemplate": "docker"
		}
	]
}
